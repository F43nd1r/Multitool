<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/constraintLayout"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:orientation="vertical"
                                             tools:targetApi="lollipop">


    <Button
        android:id="@+id/button_addMusic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onButtonClick"
        android:text="@string/button_addMusic"
        android:textAlignment="center"
        android:gravity="center"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="@string/title_defaultMusicPlayer"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        tools:textSize="18sp"
        android:layout_below="@id/button_addMusic"/>

    <Button
        android:id="@+id/button_chooseDefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onButtonClick"
        android:text="@string/button_choose"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_below="@id/textView5"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="@string/currently_playing"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        tools:textSize="18sp"
        android:layout_below="@id/button_chooseDefault"/>

    <ImageView
        android:id="@+id/image_album"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:foregroundGravity="center"
        android:layout_below="@id/textView6"/>

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textAlignment="center"
        android:layout_below="@id/image_album"/>

    <TextView
        android:id="@+id/text_album"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textAlignment="center"
        android:layout_below="@id/text_title"/>

    <TextView
        android:id="@+id/text_artist"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textAlignment="center"
        android:layout_below="@id/text_album"/>
</RelativeLayout>