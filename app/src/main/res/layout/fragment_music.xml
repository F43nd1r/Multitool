<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:targetApi="lollipop">


    <Button
        android:id="@+id/button_addMusic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:onClick="onButtonClick"
        android:text="@string/button_addMusic"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/button_updateMusic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_addMusic"
        android:gravity="center"
        android:onClick="onButtonClick"
        android:text="@string/button_updateMusic"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/button_updateMusic"
        android:gravity="center"
        android:text="@string/title_defaultMusicPlayer"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        tools:textSize="18sp"/>

    <Button
        android:id="@+id/button_chooseDefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:gravity="center"
        android:onClick="onButtonClick"
        android:text="@string/button_choose"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/button_chooseDefault"
        android:text="@string/currently_playing"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        tools:textSize="18sp"/>

    <ImageView
        android:id="@+id/image_album"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/textView6"
        android:foregroundGravity="center"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/image_album"
        android:textAlignment="center"
        android:textIsSelectable="true"/>

    <TextView
        android:id="@+id/text_album"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/text_title"
        android:textAlignment="center"
        android:textIsSelectable="true"/>

    <TextView
        android:id="@+id/text_artist"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/text_album"
        android:textAlignment="center"
        android:textIsSelectable="true"/>
</RelativeLayout>