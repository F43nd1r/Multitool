<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="ScriptManager">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/pref_enableAcra"
            android:title="@string/title_enableAcra"/>
            <Preference
                android:key="@string/pref_directory"
                android:title="@string/title_backupDir"/>
            <CheckBoxPreference
                android:defaultValue="true"
                android:key="@string/pref_spaces"
                android:title="Format : Spaces"
                android:summary="Inserts spaces around operators"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="Lightning Auto Backup">
        <CheckBoxPreference
            android:key="@string/key_enableBackup"
            android:title="Enable automatic Backup"
            android:defaultValue="false"/>
        <ListPreference
            android:key="@string/key_backupInterval"
            android:title="Interval"
            android:entries="@array/backup_intervalEntries"
            android:entryValues="@array/backup_intervalValues"
            android:defaultValue="1"/>
        <com.faendir.lightning_launcher.multitool.settings.BackupTimePreference
            android:key="@string/key_backupTime"
            android:title="Execution time"/>
    </PreferenceCategory>
</PreferenceScreen>